    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_action_img"
        android:layout_width="@dimen/image_action"
        android:layout_height="@dimen/image_action"
         />

    <TextView
        android:id="@+id/item_action_text"
