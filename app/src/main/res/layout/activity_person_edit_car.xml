<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_bar"
        android:background="@color/navColor">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="编辑车辆"
            android:textColor="@color/white"
            android:textSize="@dimen/text_bar" />
        <LinearLayout
            android:id="@+id/title_back"
            android:layout_width="@dimen/common_bar"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/bar_back"
                android:layout_height="@dimen/bar_back"
                android:src="@mipmap/ic_back" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_choose_car_type"
        android:background="@color/whiteColor"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_car_type_log"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="50dp" />
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_marginRight="5dp"
                    android:id="@+id/txt_car_type_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_14"
                    android:textColor="@color/blackColor"
                    android:layout_gravity="end"
                    android:textAlignment="textEnd"
                    android:text="请选择车辆"/>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/next"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_choose_year"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/whiteColor"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_14"
                android:textColor="@color/blackColor"
                android:text="车牌号"/>
            <EditText
                android:id="@+id/txt_car_card"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:hint="请填写车牌号"
                android:textSize="@dimen/text_14"
                android:textColor="@color/blackColor"
                android:layout_gravity="end"
                android:textAlignment="textEnd"
                android:background="@null"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="1px"
            android:background="@color/whiteColor"
            android:padding="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_14"
                android:textColor="@color/blackColor"
                android:text="上牌年份"/>
            <TextView
                android:id="@+id/txt_car_year"
                android:layout_marginRight="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="请选择上牌年份"
                android:textSize="@dimen/text_14"
                android:textColor="@color/blackColor"
                android:layout_gravity="end|center"
                android:textAlignment="textEnd"
                android:background="@null"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="1px"
            android:background="@color/whiteColor"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_14"
                android:textColor="@color/blackColor"
                android:text="行驶里程(km)"/>
            <EditText
                android:id="@+id/txt_car_kilometre"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:hint="请填写行驶里程"
                android:textSize="@dimen/text_14"
                android:textColor="@color/blackColor"
                android:layout_gravity="end"
                android:textAlignment="textEnd"
                android:background="@null"
                android:inputType="numberDecimal"
                />
        </LinearLayout>
