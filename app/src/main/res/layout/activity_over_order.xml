<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_bar"
        android:background="@color/navColor">
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="订单详情"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/text_bar" />
    </RelativeLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_order_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="订单号"
            android:textColor="@color/orange"
            android:layout_margin="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/backgroundColor"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <View
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@drawable/point_blue"
                android:layout_marginLeft="10dp">
            </View>
            <TextView
                android:id="@+id/start_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="选择出发地"
                android:textColor="@color/blackColor"
                android:textSize="14dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <View
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@drawable/point_red"
                android:layout_marginLeft="10dp">
            </View>
            <TextView
                android:id="@+id/end_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="可选择目的地"
                android:textColor="@color/blackColor"
                android:textSize="14dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/backgroundColor"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                >
                <TextView
                    android:id="@+id/txt_km"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="行驶距离：0.0km"
                    android:textSize="14dp"
                    android:textColor="@color/blackColor"
                    />
                <TextView
                    android:id="@+id/txt_wait_time"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="等待时间：5分钟"
                    android:textSize="14dp"
                    android:textColor="@color/blackColor"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                >
                <TextView
                    android:id="@+id/txt_money"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="行驶费用：0元"
                    android:textSize="14dp"
                    android:textColor="@color/blackColor"
                    />
                <TextView
                    android:id="@+id/txt_wait_money"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="等待费用：0元"
                    android:textSize="14dp"
                    android:textColor="@color/blackColor"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/backgroundColor"
            />
        <TextView
            android:id="@+id/txt_sum_money"
            android:layout_margin="20dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="总计：0元"
            android:textColor="@color/black"
            android:textAlignment="center"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_go_home"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            fancy:fb_defaultColor="@color/navColor"
            fancy:fb_iconPosition="left"
            fancy:fb_radius="5dp"
            fancy:fb_text="返回首页"
            fancy:fb_textColor="#FFFFFF"
            android:layout_margin="@dimen/spacing"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
</LinearLayout>