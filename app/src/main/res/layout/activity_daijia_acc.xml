<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_bar"
        android:background="@color/navColor">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="代驾账户"
            android:textColor="@color/white"
            android:textSize="@dimen/text_bar" />
        <LinearLayout
            android:id="@+id/title_back"
            android:layout_width="@dimen/common_bar"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/bar_back"
                android:layout_height="@dimen/bar_back"
                android:src="@mipmap/ic_back" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/whiteColor"
        android:orientation="vertical">
        <TextView
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="余额（元）"
            android:textColor="@color/lightGray99"
            android:textSize="@dimen/text_12"/>
        <TextView
            android:id="@+id/txt_money"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="40dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/whiteColor"
        android:orientation="vertical">
        <TextView
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值金额"
            android:textColor="@color/lightGray99"
            android:textSize="@dimen/text_14"/>
        <RadioGroup
            android:layout_margin="10dp"
            android:id="@+id/rdo_gorup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/rdo_20"
                android:textColor="@drawable/fillet"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:layout_marginRight="@dimen/spacing"
                android:background="@drawable/fillet"
                android:button="@null"
                android:gravity="center"
                android:text="20元" />
            <RadioButton
                android:id="@+id/rdo_50"
                android:textColor="@drawable/fillet"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/spacing"
                android:background="@drawable/fillet"
                android:button="@null"
                android:gravity="center"
                android:text="50元" />
            <RadioButton
                android:id="@+id/rdo_100"
                android:textColor="@drawable/fillet"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/fillet"
                android:button="@null"
                android:gravity="center"
                android:text="100元" />

        </RadioGroup>
        <RadioGroup
            android:layout_margin="10dp"
            android:id="@+id/rdo_gorup_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/rdo_200"
                android:textColor="@drawable/fillet"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/fillet"
                android:button="@null"
                android:layout_marginRight="@dimen/spacing"
                android:gravity="center"
                android:text="200元" />
            <RadioButton
                android:id="@+id/rdo_500"
                android:textColor="@drawable/fillet"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/fillet"
                android:layout_marginRight="@dimen/spacing"
                android:button="@null"
                android:gravity="center"
                android:checked="true"
                android:text="500元" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/whiteColor"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付方式"
            android:textColor="@color/lightGray99"
            android:textSize="@dimen/text_14"/>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/backgroundColor"/>
        <LinearLayout
            android:id="@+id/ll_wxpay"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/wechat_pay"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/img_wxpay"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/succeed_default"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_alipay"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/alipay"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/img_alipay"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/succeed_default"/>
        </LinearLayout>
    </LinearLayout>
    <mehdi.sakout.fancybuttons.FancyButton
        android:layout_margin="10dp"
        android:id="@+id/btn_cz"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        fancy:fb_defaultColor="@color/navColor"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="3dp"
        fancy:fb_text="确认充值"
        fancy:fb_textColor="#FFFFFF"
        android:layout_marginLeft="@dimen/spacing"
        android:layout_marginRight="@dimen/spacing"/>
</LinearLayout>
